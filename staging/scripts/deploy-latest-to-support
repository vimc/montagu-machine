#!/usr/bin/env bash

echo "Running deploy latest to support"

SUPPORTHOST=$(ssh-keyscan support.montagu.dide.ic.ac.uk)
if [ ! -f ~/.ssh/known_hosts ]; then
    echo "Writing support in new known_hosts"
    echo $SUPPORTHOST > ~/.ssh/known_hosts
else
    echo "Checking support exists in known_hosts"
    grep -q -F "$SUPPORTHOST" ~/.ssh/known_hosts || echo $SUPPORTHOST >> ~/.ssh/known_hosts
fi

echo "sshing to support..."
ssh vagrant@support.montagu.dide.ic.ac.uk 'echo "$HOSTNAME";cd montagu-machine;./staging/scripts/deploy-latest-local'



